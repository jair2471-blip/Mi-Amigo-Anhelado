---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - Modo Acorde√≥n">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff;
    }
    body.dark-mode {
      --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788;
    }

    body {
      background-color: var(--bg);
      color: var(--text);
      font-family: 'Crimson Text', serif;
      margin: 0; padding: 0;
      display: flex; flex-direction: column; align-items: center; /* CENTRADO TOTAL */
      min-height: 100vh;
    }

    .main-wrapper {
      width: 100%;
      max-width: 700px; /* Ancho de lectura perfecto */
      padding: 20px;
      box-sizing: border-box;
    }

    .toolbar {
      position: sticky; top: 10px;
      background: var(--surface);
      padding: 10px 20px;
      border-radius: 50px;
      display: flex; justify-content: space-between; align-items: center;
      z-index: 100; border: 1px solid rgba(0,0,0,0.1);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }

    button {
      padding: 8px 15px; border: none; border-radius: 20px;
      background: var(--primary); color: white;
      cursor: pointer; font-weight: bold; transition: 0.3s;
    }

    /* ESTILO DEL ACORDE√ìN */
    .acordeon-item {
      background: var(--surface);
      border-radius: 15px;
      margin-bottom: 15px;
      border: 1px solid rgba(0,0,0,0.08);
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.02);
    }

    .acordeon-header {
      padding: 20px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--surface);
      transition: background 0.3s;
    }

    .acordeon-header:hover { background: rgba(212, 165, 116, 0.1); }

    .acordeon-header h2 {
      margin: 0; font-family: 'Playfair Display';
      font-size: 1.6rem; color: var(--primary);
    }

    .acordeon-content {
      max-height: 0; /* ESCONDIDO POR DEFECTO */
      overflow: hidden;
      transition: max-height 0.5s ease-out, padding 0.3s;
      padding: 0 25px;
      background: var(--surface);
    }

    /* Cuando se abre */
    .acordeon-item.active .acordeon-content {
      max-height: 5000px; /* Suficiente para cap√≠tulos largos */
      padding: 10px 25px 30px 25px;
      border-top: 1px solid rgba(0,0,0,0.05);
    }

    .acordeon-item.active .icon-arrow { transform: rotate(180deg); }

    .versiculo { font-size: var(--f-size, 20px); line-height: 1.8; margin-bottom: 12px; display: block; }
    .v-num { color: var(--accent); font-weight: bold; margin-right: 10px; font-size: 0.8em; }

    .footer-nav { display: flex; gap: 10px; margin: 30px 0 100px; }
    .footer-nav button { flex: 1; padding: 15px; border-radius: 12px; }
    
    .icon-arrow { transition: transform 0.3s; font-size: 1.2rem; color: var(--accent); }
  </style>

  <div class="main-wrapper">
    <div style="text-align:center; padding: 20px 0;">
      <h1 style="font-family: 'Playfair Display'; font-size: 2.8rem; color: var(--primary); margin:0;">Biblia 365</h1>
      <p style="color: var(--accent); font-weight: bold; letter-spacing: 2px;">D√çA <span id="numDia">1</span></p>
    </div>

    <div class="toolbar">
      <button onclick="window.irHoy()" style="background:var(--accent)">Hoy</button>
      <div style="display:flex; gap:8px;">
        <button onclick="window.zoom(-2)">A-</button>
        <button onclick="window.zoom(2)">A+</button>
        <button onclick="window.modoNoche()">üåì</button>
      </div>
    </div>

    <div id="contenedor-acordeon">
      </div>

    <div class="footer-nav">
      <button onclick="window.cambiarDia(-1)">Anterior</button>
      <button onclick="window.cambiarDia(1)">Siguiente</button>
    </div>
  </div>

  <script is:inline>
    const PLAN_LIBROS = [
      {n:'G√©nesis', id:'genesis', c:50}, {n:'√âxodo', id:'exodo', c:40}, {n:'Lev√≠tico', id:'levitico', c:27},
      {n:'N√∫meros', id:'numeros', c:36}, {n:'Deuteronomio', id:'deuteronomio', c:34}, {n:'Josu√©', id:'josue', c:24},
      {n:'Jueces', id:'jueces', c:21}, {n:'Rut', id:'rut', c:4}, {n:'1 Samuel', id:'1-samuel', c:31},
      {n:'2 Samuel', id:'2-samuel', c:24}, {n:'1 Reyes', id:'1-reyes', c:22}, {n:'2 Reyes', id:'2-reyes', c:25},
      {n:'1 Cr√≥nicas', id:'1-cronicas', c:29}, {n:'2 Cr√≥nicas', id:'2-cronicas', c:36}, {n:'Esdras', id:'esdras', c:10},
      {n:'Nehem√≠as', id:'nehemias', c:13}, {n:'Ester', id:'ester', c:10}, {n:'Job', id:'job', c:42},
      {n:'Salmos', id:'salmos', c:150}, {n:'Proverbios', id:'proverbios', c:31}, {n:'Eclesiast√©s', id:'eclesiastes', c:12},
      {n:'Cantares', id:'cantares', c:8}, {n:'Isa√≠as', id:'isaias', c:66}, {n:'Jerem√≠as', id:'jeremias', c:52},
      {n:'Lamentaciones', id:'lamentaciones', c:5}, {n:'Ezequiel', id:'ezequiel', c:48}, {n:'Daniel', id:'daniel', c:12},
      {n:'Oseas', id:'oseas', c:14}, {n:'Joel', id:'joel', c:3}, {n:'Am√≥s', id:'amos', c:9},
      {n:'Abd√≠as', id:'abdias', c:1}, {n:'Jon√°s', id:'jonas', c:4}, {n:'Miqueas', id:'miqueas', c:7},
      {n:'Nah√∫m', id:'nahum', c:3}, {n:'Habacuc', id:'habacuc', c:3}, {n:'Sofon√≠as', id:'sofonias', c:3},
      {n:'Hageo', id:'hageo', c:2}, {n:'Zacar√≠as', id:'zacarias', c:14}, {n:'Malaqu√≠as', id:'malaquias', c:4},
      {n:'Mateo', id:'mateo', c:28}, {n:'Marcos', id:'marcos', c:16}, {n:'Lucas', id:'lucas', c:24},
      {n:'Juan', id:'juan', c:21}, {n:'Hechos', id:'hechos', c:28}, {n:'Romanos', id:'romanos', c:16},
      {n:'1 Corintios', id:'1-corintios', c:16}, {n:'2 Corintios', id:'2-corintios', c:13}, {n:'G√°latas', id:'galatas', c:6},
      {n:'Efesios', id:'efesios', c:6}, {n:'Filipenses', id:'filipenses', c:4}, {n:'Colosenses', id:'colosenses', c:4},
      {n:'1 Tesalonicenses', id:'1-tesalonicenses', c:5}, {n:'2 Tesalonicenses', id:'2-tesalonicenses', c:3},
      {n:'1 Timoteo', id:'1-timoteo', c:6}, {n:'2 Timoteo', id:'2-timoteo', c:4}, {n:'Tito', id:'tito', c:3},
      {n:'Filem√≥n', id:'filemon', c:1}, {n:'Hebreos', id:'hebreos', c:13}, {n:'Santiago', id:'santiago', c:5},
      {n:'1 Pedro', id:'1-pedro', c:5}, {n:'2 Pedro', id:'2-pedro', c:3}, {n:'1 Juan', id:'1-juan', c:5},
      {n:'2 Juan', id:'2-juan', c:1}, {n:'3 Juan', id:'3-juan', c:1}, {n:'Judas', id:'judas', c:1},
      {n:'Apocalipsis', id:'apocalipsis', c:22}
    ];

    let db = null;
    let fechaActual = new Date();
    let fontSize = 20;
    let planFull = [];
    PLAN_LIBROS.forEach(l => { for(let i=1; i<=l.c; i++) planFull.push({n:l.n, id:l.id, c:i}); });

    async function cargar() {
      const res = await fetch('/biblia.json');
      db = await res.json();
      render();
    }

    function render() {
      const diaAnio = Math.floor((fechaActual - new Date(fechaActual.getFullYear(), 0, 0)) / 86400000);
      document.getElementById('numDia').innerText = diaAnio;
      
      const idx = (diaAnio - 1) * 3;
      const lecturas = planFull.slice(idx, idx + 3);
      
      let html = "";
      lecturas.forEach((it, index) => {
        const capData = db[it.id] ? db[it.id][it.c] : null;
        if(capData) {
          // El primer cap√≠tulo aparece abierto por defecto (opcional)
          const isActive = index === 0 ? 'active' : ''; 
          html += `
            <div class="acordeon-item ${isActive}" id="cap-${index}">
              <div class="acordeon-header" onclick="window.toggleAcordeon(${index})">
                <h2>${it.n} ${it.c}</h2>
                <span class="icon-arrow">‚ñº</span>
              </div>
              <div class="acordeon-content">`;
          
          Object.entries(capData).forEach(([num, txt]) => {
            const limpio = txt.replace(/^\d+\/n/, '').replace(/\/n/g, '<br>');
            html += `<span class="versiculo"><span class="v-num">${num}</span>${limpio}</span>`;
          });
          
          html += `</div></div>`;
        }
      });
      document.getElementById('contenedor-acordeon').innerHTML = html;
      window.scrollTo(0,0);
    }

    window.toggleAcordeon = (idx) => {
      const item = document.getElementById(`cap-${idx}`);
      item.classList.toggle('active');
    };

    window.zoom = (n) => { fontSize += n; document.documentElement.style.setProperty('--f-size', fontSize + 'px'); };
    window.modoNoche = () => document.body.classList.toggle('dark-mode');
    window.cambiarDia = (n) => { fechaActual.setDate(fechaActual.getDate() + n); render(); };
    window.irHoy = () => { fechaActual = new Date(); render(); };

    document.addEventListener('DOMContentLoaded', cargar);
  </script>
</PageLayout>
