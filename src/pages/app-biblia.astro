---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - El Amigo Anhelado">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" is:inline></script>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff; }
    body.dark-mode { --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788; }

    body { 
      background-color: var(--bg); color: var(--text); font-family: 'Crimson Text', serif; 
      margin: 0; display: flex; flex-direction: column; align-items: center; 
    }

    .main-container { width: 100%; max-width: 700px; padding: 20px; box-sizing: border-box; }

    /* Acorde√≥n */
    .acordeon-item { background: var(--surface); border-radius: 15px; margin-bottom: 15px; border: 1px solid rgba(0,0,0,0.1); overflow: hidden; }
    .acordeon-header { padding: 20px; cursor: pointer; display: flex; justify-content: space-between; align-items: center; }
    .acordeon-header h2 { margin: 0; font-family: 'Playfair Display'; color: var(--primary); }
    .acordeon-content { max-height: 0; overflow: hidden; transition: max-height 0.4s ease-out; padding: 0 25px; }
    .acordeon-item.active .acordeon-content { max-height: 10000px; padding: 10px 25px 30px; border-top: 1px solid rgba(0,0,0,0.05); }

    /* Vers√≠culos Interactivos */
    .v-txt { font-size: var(--f-size, 20px); line-height: 1.8; margin-bottom: 8px; display: block; padding: 4px 8px; border-radius: 4px; cursor: pointer; transition: 0.2s; }
    .v-txt:hover { background: rgba(212, 165, 116, 0.1); }
    .v-num { color: var(--accent); font-weight: bold; margin-right: 10px; font-size: 0.8em; }

    /* Resaltados */
    .resaltado-amarillo { background-color: #fef08a !important; color: #000 !important; }
    .resaltado-verde { background-color: #bbf7d0 !important; color: #000 !important; }
    .resaltado-azul { background-color: #bfdbfe !important; color: #000 !important; }

    /* Men√∫ de herramientas flotante */
    #menuAcciones {
      position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%);
      background: var(--primary); padding: 10px 20px; border-radius: 50px;
      display: none; gap: 15px; z-index: 1000; box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    }
    .btn-tool { background: none; border: none; color: white; cursor: pointer; font-size: 1.2rem; display: flex; flex-direction: column; align-items: center; font-size: 0.7rem; }
    .btn-tool i { font-size: 1.4rem; margin-bottom: 2px; }

    /* Toolbar superior */
    .toolbar { display: flex; justify-content: space-between; align-items: center; background: var(--surface); padding: 10px 20px; border-radius: 50px; margin-bottom: 20px; border: 1px solid rgba(0,0,0,0.1); }
    button.btn-top { background: var(--primary); color: white; border: none; padding: 8px 15px; border-radius: 20px; cursor: pointer; font-weight: bold; }
  </style>

  <div class="main-container">
    <div style="text-align:center; padding: 20px 0;">
      <h1 style="font-family: 'Playfair Display'; font-size: 2.5rem; color: var(--primary);">Biblia 365</h1>
      <p style="color:var(--accent)">D√≠a <span id="numDia">1</span></p>
    </div>

    <div class="toolbar">
      <button class="btn-top" onclick="window.irHoy()">Hoy</button>
      <div style="display:flex; gap:10px;">
        <button class="btn-top" onclick="window.zoom(2)">A+</button>
        <button class="btn-top" onclick="window.modoNoche()">üåì</button>
      </div>
    </div>

    <div id="contenedor-lectura"></div>

    <div style="display:flex; gap:15px; margin: 30px 0 100px;">
      <button class="btn-top" style="flex:1; padding: 15px;" onclick="window.cambiarDia(-1)">Ayer</button>
      <button class="btn-top" style="flex:1; padding: 15px;" onclick="window.cambiarDia(1)">Ma√±ana</button>
    </div>
  </div>

  <div id="menuAcciones">
    <button class="btn-tool" onclick="window.resaltar('amarillo')">üü°<span>Marcar</span></button>
    <button class="btn-tool" onclick="window.copiarTexto()">üìã<span>Copiar</span></button>
    <button class="btn-tool" onclick="window.compartirImagen()">üì∏<span>Imagen</span></button>
    <button class="btn-tool" onclick="window.limpiarSeleccion()">‚ùå<span>Cerrar</span></button>
  </div>

  <script is:inline>
    const LIBROS_DATA = [
      {n:'G√©nesis', id:'genesis', c:50}, {n:'√âxodo', id:'exodo', c:40}, {n:'Lev√≠tico', id:'levitico', c:27},
      {n:'N√∫meros', id:'numeros', c:36}, {n:'Deuteronomio', id:'deuteronomio', c:34}, {n:'Josu√©', id:'josue', c:24},
      {n:'Jueces', id:'jueces', c:21}, {n:'Rut', id:'rut', c:4}, {n:'1 Samuel', id:'1-samuel', c:31},
      {n:'2 Samuel', id:'2-samuel', c:24}, {n:'1 Reyes', id:'1-reyes', c:22}, {n:'2 Reyes', id:'2-reyes', c:25},
      {n:'1 Cr√≥nicas', id:'1-cronicas', c:29}, {n:'2 Cr√≥nicas', id:'2-cronicas', c:36}, {n:'Esdras', id:'esdras', c:10},
      {n:'Nehem√≠as', id:'nehemias', c:13}, {n:'Ester', id:'ester', c:10}, {n:'Job', id:'job', c:42},
      {n:'Salmos', id:'salmos', c:150}, {n:'Proverbios', id:'proverbios', c:31}, {n:'Eclesiast√©s', id:'eclesiastes', c:12},
      {n:'Cantares', id:'cantares', c:8}, {n:'Isa√≠as', id:'isaias', c:66}, {n:'Jerem√≠as', id:'jeremias', c:52},
      {n:'Lamentaciones', id:'lamentaciones', c:5}, {n:'Ezequiel', id:'ezequiel', c:48}, {n:'Daniel', id:'daniel', c:12},
      {n:'Oseas', id:'oseas', c:14}, {n:'Joel', id:'joel', c:3}, {n:'Am√≥s', id:'amos', c:9},
      {n:'Abd√≠as', id:'abdias', c:1}, {n:'Jon√°s', id:'jonas', c:4}, {n:'Miqueas', id:'miqueas', c:7},
      {n:'Nah√∫m', id:'nahum', c:3}, {n:'Habacuc', id:'habacuc', c:3}, {n:'Sofon√≠as', id:'sofonias', c:3},
      {n:'Hageo', id:'hageo', c:2}, {n:'Zacar√≠as', id:'zacarias', c:14}, {n:'Malaqu√≠as', id:'malaquias', c:4},
      {n:'Mateo', id:'mateo', c:28}, {n:'Marcos', id:'marcos', c:16}, {n:'Lucas', id:'lucas', c:24},
      {n:'Juan', id:'juan', c:21}, {n:'Hechos', id:'hechos', c:28}, {n:'Romanos', id:'romanos', c:16},
      {n:'1 Corintios', id:'1-corintios', c:16}, {n:'2 Corintios', id:'2-corintios', c:13}, {n:'G√°latas', id:'galatas', c:6},
      {n:'Efesios', id:'efesios', c:6}, {n:'Filipenses', id:'filipenses', c:4}, {n:'Colosenses', id:'colosenses', c:4},
      {n:'1 Tesalonicenses', id:'1-tesalonicenses', c:5}, {n:'2 Tesalonicenses', id:'2-tesalonicenses', c:3},
      {n:'1 Timoteo', id:'1-timoteo', c:6}, {n:'2 Timoteo', id:'2-timoteo', c:4}, {n:'Tito', id:'tito', c:3},
      {n:'Filem√≥n', id:'filemon', c:1}, {n:'Hebreos', id:'hebreos', c:13}, {n:'Santiago', id:'santiago', c:5},
      {n:'1 Pedro', id:'1-pedro', c:5}, {n:'2 Pedro', id:'2-pedro', c:3}, {n:'1 Juan', id:'1-juan', c:5},
      {n:'2 Juan', id:'2-juan', c:1}, {n:'3 Juan', id:'3-juan', c:1}, {n:'Judas', id:'judas', c:1},
      {n:'Apocalipsis', id:'apocalipsis', c:22}
    ];

    let bibliaJSON = null;
    let fecha = new Date();
    let fontSize = 20;
    let vSeleccionado = null;
    let planFull = [];
    LIBROS_DATA.forEach(l => { for(let i=1; i<=l.c; i++) planFull.push({n:l.n, id:l.id, c:i}); });

    async function cargar() {
      const res = await fetch('/biblia.json');
      bibliaJSON = await res.json();
      render();
    }

    function render() {
      const dia = Math.floor((fecha - new Date(fecha.getFullYear(), 0, 0)) / 86400000);
      document.getElementById('numDia').innerText = dia;
      const lecturas = planFull.slice((dia-1)*3, (dia-1)*3 + 3);
      
      let html = "";
      lecturas.forEach((it, idx) => {
        const cap = bibliaJSON[it.id] ? bibliaJSON[it.id][it.c] : null;
        if(cap) {
          html += `<div class="acordeon-item ${idx===0?'active':''}" id="ac-${idx}">
            <div class="acordeon-header" onclick="window.toggleAc(${idx})">
              <h2>${it.n} ${it.c}</h2><span>‚ñº</span>
            </div>
            <div class="acordeon-content">`;
          Object.entries(cap).forEach(([num, txt]) => {
            const limpio = txt.replace(/^\d+\/n/, '').replace(/\/n/g, '<br>');
            html += `<span class="v-txt" onclick="window.seleccionarV(this, '${it.n}', ${it.c}, ${num})">
              <span class="v-num">${num}</span>${limpio}
            </span>`;
          });
          html += `</div></div>`;
        }
      });
      document.getElementById('contenedor-lectura').innerHTML = html;
      window.scrollTo(0,0);
    }

    // L√≥gica de interacci√≥n
    window.toggleAc = (idx) => document.getElementById(`ac-${idx}`).classList.toggle('active');
    
    window.seleccionarV = (el, libro, cap, num) => {
      vSeleccionado = { el, texto: el.innerText, ref: `${libro} ${cap}:${num}` };
      document.getElementById('menuAcciones').style.display = 'flex';
      // Marcamos visualmente el seleccionado
      document.querySelectorAll('.v-txt').forEach(v => v.style.border = 'none');
      el.style.border = '1px dashed var(--accent)';
    };

    window.resaltar = (color) => {
      if(vSeleccionado) vSeleccionado.el.classList.toggle(`resaltado-${color}`);
      window.limpiarSeleccion();
    };

    window.copiarTexto = () => {
      const t = `${vSeleccionado.texto} (${vSeleccionado.ref})`;
      navigator.clipboard.writeText(t);
      alert("Copiado al portapapeles");
      window.limpiarSeleccion();
    };

    window.compartirImagen = () => {
      const node = vSeleccionado.el;
      html2canvas(node, { backgroundColor: '#faf8f5' }).then(canvas => {
        const link = document.createElement('a');
        link.download = `Versiculo-${vSeleccionado.ref}.png`;
        link.href = canvas.toDataURL();
        link.click();
      });
      window.limpiarSeleccion();
    };

    window.limpiarSeleccion = () => {
      document.getElementById('menuAcciones').style.display = 'none';
      if(vSeleccionado) vSeleccionado.el.style.border = 'none';
      vSeleccionado = null;
    };

    window.zoom = (n) => { fontSize += n; document.documentElement.style.setProperty('--f-size', fontSize + 'px'); };
    window.modoNoche = () => document.body.classList.toggle('dark-mode');
    window.cambiarDia = (n) => { fecha.setDate(fecha.getDate() + n); render(); };
    window.irHoy = () => { fecha = new Date(); render(); };

    document.addEventListener('DOMContentLoaded', cargar);
  </script>
</PageLayout>
