---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
// Si tienes el componente FormattedDate lo puedes importar, si no, usamos JS normal
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PageLayout title="Blog de Reflexiones">
    <main class="blog-main">
        <section class="intro-text">
            <h1>Reflexiones de Fe</h1>
            <p>Ense√±anza pura para una vida transformada.</p>
        </section>

        <section>
            <ul>
                {
                    posts.map((post) => (
                        <li>
                            <a href={`/blog/${post.id}/`}>
                                {post.data.heroImage && (
                                    <img width={720} height={360} src={post.data.heroImage} alt="" />
                                )}
                                <div class="post-info">
                                    <h4 class="title">{post.data.title}</h4>
                                    <p class="date">
                                        {post.data.pubDate.toLocaleDateString('es-ES', {
                                            year: 'numeric',
                                            month: 'short',
                                            day: 'numeric',
                                        })}
                                    </p>
                                </div>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </main>
</PageLayout>

<style>
    .blog-main {
        width: 100%;
        max-width: 960px;
        margin: 0 auto;
        padding: 3rem 1rem;
    }
    .intro-text {
        text-align: center;
        margin-bottom: 3rem;
    }
    .intro-text h1 {
        font-family: 'Playfair Display', serif;
        font-size: 3rem;
        color: #1a4d2e;
    }
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    ul li {
        width: calc(50% - 1rem);
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
    }
    ul li:hover {
        transform: translateY(-5px);
    }
    ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
    }
    ul li img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    .post-info {
        padding: 1.5rem;
    }
    .title {
        margin: 0;
        color: #1a4d2e;
        line-height: 1.2;
        font-size: 1.5rem;
        font-family: 'Playfair Display', serif;
    }
    .date {
        margin-top: 0.5rem;
        color: #d4a574;
        font-weight: bold;
        font-size: 0.9rem;
    }
    ul li a {
        text-decoration: none;
    }
    @media (max-width: 720px) {
        ul { gap: 1rem; }
        ul li { width: 100%; }
        .intro-text h1 { font-size: 2rem; }
    }
</style>