---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

// Traemos los posts y los ordenamos por fecha
const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<PageLayout title="Reflexiones Bíblicas">
    <main class="blog-container">
        <header class="blog-header">
            <span class="subtitle">ENSEÑANZA PURA</span>
            <h1>Crónicas de la Verdad</h1>
            <div class="header-line"></div>
            <p class="description">Artículos directos basados únicamente en la Palabra, sin filtros ni interpretaciones humanas.</p>
        </header>

        <section class="posts-list">
            {posts.map((post) => (
                <article class="post-item">
                    <a href={`/blog/${post.id}/`}>
                        <div class="post-content">
                            <span class="post-date">
                                {post.data.pubDate.toLocaleDateString('es-ES', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                })}
                            </span>
                            <h2>{post.data.title}</h2>
                            <p>{post.data.description}</p>
                            <span class="read-link">Continuar leyendo →</span>
                        </div>
                    </a>
                </article>
            ))}
        </section>
    </main>
</PageLayout>

<style>
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 5rem;
    }

    .subtitle {
        color: var(--accent);
        font-weight: 700;
        letter-spacing: 3px;
        font-size: 0.85rem;
        display: block;
        margin-bottom: 1rem;
    }

    h1 {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        color: var(--primary);
        margin: 0;
    }

    .header-line {
        width: 100px;
        height: 3px;
        background: var(--accent);
        margin: 1.5rem auto;
    }

    .description {
        font-style: italic;
        color: #555;
        font-size: 1.2rem;
    }

    .posts-list {
        display: flex;
        flex-direction: column;
        gap: 4rem;
    }

    .post-item a {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .post-content {
        padding: 2rem;
        border: 1px solid rgba(212, 165, 116, 0.2);
        border-radius: 12px;
        background: #fff;
        transition: all 0.3s ease;
        position: relative;
    }

    .post-content:hover {
        border-color: var(--accent);
        box-shadow: 0 10px 30px rgba(26, 77, 46, 0.05);
        transform: translateY(-3px);
    }

    .post-date {
        color: var(--accent);
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        color: var(--primary);
        margin: 0.8rem 0;
        line-height: 1.2;
    }

    .post-content p {
        color: #4a5568;
        font-size: 1.15rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .read-link {
        font-weight: 700;
        color: var(--primary);
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
    }

    @media (max-width: 600px) {
        h1 { font-size: 2.5rem; }
        .blog-container { padding-top: 2rem; }
    }
</style>